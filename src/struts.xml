<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.ui.theme" value="simple" />
	<!-- 開発者モード(デバッグしたい時にはコメント外してください。ユーザーのエラーページが無効にできます) -->
	<!-- <constant name="struts.devMode" value="true" /> -->
	<package name="com.internousdev.sampleweb.action" extends="struts-default">

       <action name="FileUploadAction" class="com.internousdev.sampleweb.action.FileUploadAction">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">2097152</param>
                <param name="allowedTypes">
                    image/png,image/gif,image/jpeg,image/pjpeg
                </param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <result name="success">successUserImage.jsp</result>
            <result name="input">UserImage.jsp</result>
        </action>		<!-- ここまで -->
</package>
</struts>